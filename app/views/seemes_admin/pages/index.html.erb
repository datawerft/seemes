<h1>List of all Pages</h1>

<%= link_to 'Create Page', new_seemes_admin_page_path %>

<table>
  <tr><th>Title</th><th>Content</th><th>Actions</th></tr>
  <% for page in @seemes_pages %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.content[0..50] %></td>
    <td><%= link_to page.title, edit_seemes_admin_page_path(page) %></td>
  </tr>
  <% end -%>
</table>